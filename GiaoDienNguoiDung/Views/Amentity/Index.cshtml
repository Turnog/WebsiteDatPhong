@model IEnumerable<NghiepVu.Entities.Amentity>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Danh sách tiện nghi của phòng</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">

        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Amentity" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle">Thêm mới tiện nghi của phòng</i>
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Số định danh</th>
                    <th>Tên tiện nghi</th>
                    <th>Mô tả</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td class="w-100 btn-group" role="group">
                            <a asp-controller="Amentity" asp-action="Update" asp-route-amentityId="@item.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Sửa</a>
                            <a asp-controller="Amentity" asp-action="Delete" asp-route-amentityId="@item.Id" class="btn btn-danger"><i class="bi bi-trash3"></i>Xoá</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



