@model IEnumerable<NghiepVu.Entities.Hotel>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Danh sách khách sạn</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">

        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Hotel" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle">Thêm mới</i>
                    </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Tên khách sạn</th>
                    <th>Vị trí</th>
                    <th>Giá</th>
                    <th>Diện tích</th>
                    <th>Số người tối đa</th>
                    <th>Image</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.SquareMeters</td>
                        <td>@item.Occupancy</td>
                        <td><img src="@item.ImageUrl" alt="Hotel Image" style="width: 100px; height: auto;" /></td>
                        <td class="w-100 btn-group" role="group">
                            <a asp-controller="Hotel" asp-action="Update" asp-route-hotelId="@item.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Sửa</a>
                            <a asp-controller="Hotel" asp-action="Delete" asp-route-hotelId="@item.Id" class="btn btn-danger"><i class="bi bi-trash3"></i>Xoá</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



