@model NghiepVu.Entities.Hotel

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Cập nhật thông tin khách sạn</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input hidden asp-for="Id" />
            <div class="p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Name" class="form-control border shadow" />
                    <label asp-for="Name" class="ms-2">Tên khách sạn *</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2">Vị trí *</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Price" class="form-control border shadow" />
                    <label asp-for="Price" class="ms-2">Giá *</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.SquareMeters" class="form-control border shadow" />
                    <label asp-for="SquareMeters" class="ms-2">Diện tích *</label>
                    <span asp-validation-for="SquareMeters" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Occupancy" class="form-control border shadow" />
                    <label asp-for="Occupancy" class="ms-2">Số người tối đa *</label>
                    <span asp-validation-for="Occupancy" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.ImageUrl" class="form-control border shadow" />
                    <label asp-for="ImageUrl" class="ms-2">Hình ảnh *</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-check-circle">Xác nhận</i>
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Hotel" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle">Huỷ</i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" width="100%"
                style="border-radius:5px; border: 1px solid #ffffff "/>
            </div>
        </form>

    </div>
</div>
<!-- Modal hiển thị lỗi -->
<div class="modal fade" id="validationModal" tabindex="-1" aria-labelledby="validationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="validationModalLabel">Lỗi nhập liệu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                Vui lòng nhập đầy đủ thông tin!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var hasError = '@(!ViewData.ModelState.IsValid)';
            if (hasError === 'True') {
                var myModal = new bootstrap.Modal(document.getElementById('validationModal'));
                myModal.show();
            }
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
