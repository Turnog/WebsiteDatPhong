@model LoginViewModel

<div class="container  pt-5">
    <div class="card shadow border">
        <div class="card-header bg-success bg-gradient ms-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Đăng nhập</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-12">
                    <section>
                        <form method="post">
                            <input type="hidden" asp-for="RedirectUrl" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control border shadow" aria-required="true" />
                                <label asp-for="Email" class="form-label">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control border shadow" aria-required="true" />
                                <label asp-for="Password" class="form-label">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input border shadow" aria-required="true" />
                                <label class="form-check-label">Ghi nhớ đăng nhập</label>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-success btn-lg w-100 shadow">Đăng nhập</button>
                            </div>
                            <div class="d-flex justify-content-between pt-2">
                                <p>
                                    <a asp-action="ForgotPassword">Quên mật khẩu?</a>
                                </p>
                                <p>
                                    <a asp-action="Register" asp-all-route="@Model.RedirectUrl">Đăng ký tài khoản</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var hasError = '@(!ViewData.ModelState.IsValid)';
            if (hasError === 'True') {
                var myModal = new bootstrap.Modal(document.getElementById('validationModal'));
                myModal.show();
            }
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}