@model NghiepVu.Entities.Booking

<div class="container pt-4 mt-0 mt-lg-4">
    <div class="row" style="border: 1px solid #004C89">
        <div class="col-12 col-lg-7 p-4 mt-4 mt-md-4">
            <div class="row p-1 my-1" style="border-radius: 20px">
                <div class="col-6">
                    <h2 class="text-primary">Chi tiết</h2>
                </div>
                <div class="text-end col-6">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-danger" style="width: 200px">
                        <i class="fa-solid fa-xmark"></i> Thay đổi phòng đã chọn
                    </a>
                </div>
                <hr />
                Thông tin khách sạn
                <partial name="_HotelDetail" model="@Model.Hotel" />
                <hr/>
                <div class="text-end">
                    <h3 class="text-danger font-weight-bold">
                        Tổng chi phí:
                        <span class="text-primary" style="border-bottom: 1px solid #000000">
                            @Model.TotalCost.ToString() 
                        </span>
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-5 p-4 mt-4 mt-md-0" style="border: 1px solid #004C89">
            <form method="post">
                <input type="hidden" asp-for="HotelId" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="CheckInDate" />
                <input type="hidden" asp-for="CheckOutDate" />
                <input type="hidden" asp-for="Nights" />
                <div class="row pt-1 md-3" style="border-radius:20px">
                    <div class="col-12">
                        <h3 class="text-primary">Thông tin đặt phòng</h3>
                    </div>
                </div>
                <div class="form-group pt-0">
                    <label asp-for="Name" class="text-black">
                        Tên
                    </label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group pt-2">
                    <label asp-for="Phone" class="text-black">
                        Số điện thoại
                    </label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group pt-2">
                    <label asp-for="Email" class="text-black">
                        Email
                    </label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group pt-2">
                    <label asp-for="CheckInDate" class="text-black">
                        Ngày nhận phòng
                    </label>
                    <input asp-for="CheckInDate" class="form-control" />
                    <span asp-validation-for="CheckInDate" class="text-danger"></span>
                </div>

                <div class="form-group pt-2">
                    <label asp-for="CheckOutDate" class="text-black">
                        Ngày trả phòng
                    </label>
                    <input asp-for="CheckOutDate" class="form-control" />
                    <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                </div>

                <div class="form-group pt-2">
                    <label asp-for="Nights" class="text-black">
                        Số đêm
                    </label>
                    <input asp-for="Nights" class="form-control" />
                    <span asp-validation-for="Nights" class="text-danger"></span>
                </div>

                <div class="form-group pt-2 pt-md-4">
                    @if (Model?.Hotel != null && Model.Hotel.IsAvailable)
                    {
                        <button type="submit" class="btn btn-primary">Thanh toán</button>
                    }
                    else
                    {
                        <button class="btn btn-danger disabled form-control">Hết phòng</button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}